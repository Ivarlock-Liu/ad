                        <ul class="Rlist" id="rList" data-calorie ="@ViewBag.sp.Calorie">
                          @{
                              var list = ViewBag.myRecipes;
                              var total = 0;
                              if (list.Count != 0)
                              {

                                  foreach (var recipe in list)
                                  {
                                      total += int.Parse(recipe.Calorie);
                                    <li class="Rli" id="@recipe.title" data-title="@recipe.title"><a href="#">@recipe.title: @recipe.Calorie KCal</a></li>
                                  }
                                <li class="Rli" id="rLi" data-totalCalorie="@total"><a href="#">Total calorie is @total KCal</a></li>
                              }
                        }
                              


                        </ul>
